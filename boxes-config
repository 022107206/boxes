BOX whirly

created "March 17, 1999 (Wednesday, 15:40h)"
revdate "March 17, 1999 (Wednesday, 15:40h)"
revision "1.0"

sample {
     .+"+.+"+.+"+.+"+.+"+.+"+.+"+.+"+.+"+.+"+.+"+.+"+.+"+.+"+.+"+.
    (                                                             )
     )                                                           (
    (                                                             )
     "+.+"+.+"+.+"+.+"+.+"+.+"+.+"+.+"+.+"+.+"+.+"+.+"+.+"+.+"+.+"
}

shapes {
    nw  (" .")
    n   ("+\"+.")
    wnw ("(")
    w   (" )", "( ")
    ene (")")
    e   ("( ", " )")
    sw  (" \"")
    s   ("+.+\"")
}

offsets {
    ne-ene -1
    ese-se  1
}

elastic (n, w, s, e)

END whirly


